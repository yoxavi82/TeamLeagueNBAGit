<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lista_nombre_jugador"
        android:layout_width="93dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="nombre"
        android:textAlignment="center"
        android:translationX="72dp" />

    <TextView
        android:id="@+id/lista_precio_jugador"
        android:layout_width="83dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="precio"
        android:textAlignment="center"
        android:translationX="169dp" />

    <TextView
        android:id="@+id/lista_puntos_jugador"
        android:layout_width="57dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="puntos"
        android:textAlignment="center"
        android:translationX="252dp" />

    <ImageView
        android:id="@+id/imagen_jugador"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:translationX="20dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/lista_pos_jugador"
        android:layout_width="67dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="posicion"
        android:textAlignment="center"
        android:translationX="309dp" />
</RelativeLayout>

